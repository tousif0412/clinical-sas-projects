/* 1. GET ADAM DATASET INTO SAS */     
libname adam'/home/u63981529/CL/adam';

/* 2. KEEP REQUIRED VARIABLES AS PER MOCK SHELL*/
DATA ADAE;
   SET ADAM.ADAE;
   IF AESER EQ 'Y' AND AEOUT EQ 'FATAL';
RUN;

PROC SQL NOPRINT;
   SELECT COUNT (*) INTO: NBR FROM ADAE;
QUIT;
%PUT &NBR;

DATA ADAE;
   usubjid='';
   TEXT="NO OBSERVATION";
RUN;


/* 4. Include RTF style macro */
%include "/home/u63981529/CL/TLF/macros/RTFSTYLE.sas";
%_RTFSTYLE_;

/* 5. Assign titles and footnotes */
title1 j=l 'COVID-19 AA';
title2 j=l 'Protocol: 043';
title3 j=c '16.2.2.2 Serious Adverse Events Leading to Death';

footnote1 j=l '/home/u63981529/CL/Program/tlf/LIS8.SAS';

options orientation=landscape;
ods escapechar='^';
ods rtf file='/home/u63981529/CL/TLF/output/Listing/L_16_2_2_2.rtf' style=styles.test;

/* 6. Generate the report using PROC REPORT */

proc report data=ADAE split='|' style= {outputwidth=100%};

   column usubjid TEXT;

   define usubjid/ "Subject|Number"
   style (column)={just=l cellwidth=5%}
   style (header)={just=l cellwidth=5%}
   ;
   
   define TEXT/order ""
   style (column)={just=C cellwidth=80%}
   style (header)={just=C cellwidth=80%}
   ;

   compute before _page_;
      line@1 "^{style [outputwidth=100% bordertopwidth=0.5pt]}";
   endcomp;


   compute after _page_;
      line@1 "^{style [outputwidth=100% bordertopwidth=0.5pt]}";
   endcomp;

run;

ods _all_ close;








